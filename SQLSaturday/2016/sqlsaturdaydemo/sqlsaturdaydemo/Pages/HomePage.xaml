<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
		xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="sqlsaturdaydemo.HomePage">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout Padding="10" Spacing="20">
				<Label 
					Text="Hello Sql Saturday"
					HorizontalTextAlignment="Center"
					FontSize="20"/>
				<ActivityIndicator IsRunning="true"/>
				<ProgressBar
					Progress="0.6"/>
				<Button Text="Show an Alert"
					Clicked="AlertClicked"/>
				<Button Text="Check out a Grid"
					Clicked="GridClicked"/>
				<DatePicker/>
				<TimePicker/>
				<BoxView x:Name="boxView" BackgroundColor="Lime"/>
				<Stepper
					Minimum="0"
					Maximum="5"
					ValueChanged="StepperValueChanged"/>				
				<Slider/>
				<Button Text="Dependency Demo"
						BackgroundColor="#8BC34A"
						TextColor="White"
						Clicked="DependencyClicked"/>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
